<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="TruckMonitorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="TruckMonitorTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TruckMonitorTheme.Splash" parent="TruckMonitorTheme.NoActionBar">
        <item name="android:background">@drawable/layer_splash</item>
    </style>

    <style name="TruckMonitorTheme.Auth" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/primary_dark</item>
    </style>

    <style name="TruckMonitorTheme.QrScan" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>